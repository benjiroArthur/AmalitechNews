<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/userLLogin" >

    <ImageView
        android:id="@+id/user_img_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:contentDescription="@string/user_image"
        android:src="@drawable/second_login" />

    <EditText
        android:id="@+id/email_et"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_below="@+id/user_img_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:background="@drawable/rounded_conners_txt"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress" >

    <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/pswd_et"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_below="@+id/email_et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_conners_txt"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/signup_btn"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/pswd_et"
        android:layout_alignLeft="@+id/pswd_et"
        android:layout_alignRight="@+id/pswd_et"
        android:layout_alignStart="@+id/email_et"
        android:layout_below="@+id/pswd_et"
        android:layout_marginTop="41dp"
        android:background="@drawable/rounded_conners"
        android:text="@string/signup"
        android:textColor="#ffffff" />
    
     <TextView
        android:id="@+id/login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/signup_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/signup_btn"
        android:layout_marginBottom="38dp"
        android:linksClickable="true"
        android:text="@string/login"
        android:textColor="#0000ff" />

</RelativeLayout>